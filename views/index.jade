extends layout

block content
    h1= title
    ul
        li
            a(href="/sources") Parse Sources
        li
            a(href="/programs") Parse Programs
        li
            a(href="/schedules") Parse Schedules

    div.container-fluid
        div.row
            div.col-md-6
                .panel.panel-default()
                    .panel-heading
                        h3.panel-title Validating XML
                    .panel-body
                        .progress
                            .progress-bar.progress-bar-warning.progress-bar-striped.active(id='validation_bar', role='progressbar', aria-valuenow='100', aria-valuemin='0', aria-valuemax='100', style='width: 100%;')
                                span.sr-only 100% Complete
                        button.btn.btn-success.btn-sm.disabled(type='button', id="validation_re")
                            span.glyphicon.glyphicon-play(aria-hidden='true')
                        span &nbsp;
                        button.btn.btn-danger.btn-sm(id="validation_stop")
                            span.glyphicon.glyphicon-stop
            div.col-md-6
                .panel.panel-default()
                    .panel-heading
                        h3.panel-title Parsing XML
                    .panel-body
                        .progress
                            .progress-bar(role='progressbar', aria-valuenow='0', aria-valuemin='0', aria-valuemax='100', style='width: 0%;')
                                span.sr-only 0% Complete
                        button.btn.btn-success.btn-sm.disabled(type='button')
                            span.glyphicon.glyphicon-play(aria-hidden='true')